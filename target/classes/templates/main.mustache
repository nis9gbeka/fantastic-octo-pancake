<html>
<body>
    <div>
        <form action="/logout" method="post">
            <input type="hidden" name="_csrf" value="{{_csrf.token}}" />
            <input type="submit" value="Sign Out"/>
        </form>
    </div>
    <form action="/arrive" method="post">
        <input type="text" name="text" placeholder="Enter order" />
        <input type="text" name="date" placeholder="Choose date" />
        <input type="hidden" name="_csrf" value="{{_csrf.token}}" />
        <button type="submit">Submit</button>
    </form>

    <div>All arrivals</div>
    <form method="post" action="/arrive/filter">
        <input type="text" name="filter">
        <input type="hidden" name="_csrf" value="{{_csrf.token}}" />
        <button type="submit">Find</button>
    </form>
    <form method="post" action="/arrive/delete">
        <input type="text" name="id">
        <input type="hidden" name="_csrf" value="{{_csrf.token}}" />
        <button type="submit">DELETE</button>
    </form>
    {{#arrivals}}
    <div>
        <b>{{id}}</b>
        <input type="hidden" name="_csrf" value="{{_csrf.token}}" />
        <span>{{text}}</span>
        <i>{{date}}</i>

    </div>
    {{/arrivals}}

</body>
</html>